<h1>Question</h1>
<p><%= @answer.question.body %></p>
<%= link_to 'Back', question_path(@answer.question) %>
<p>
  <b>Answer: </b>
  <%= @answer.body %>
</p>
<p>
  <b>Correct: </b>
  <%= @answer.correct %>
</p>
<%= link_to 'Edit', edit_answer_path(@answer) %> |
<%= link_to 'Delete',
            answer_path(@answer),
            'data-confirm': 'Are you sure?',
            'data-method': :delete %>

